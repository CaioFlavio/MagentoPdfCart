<?xml version="1.0"?>
<config>
    <tabs>
        <caioflavio>
            <label>CaioFlavio Extensions</label>
            <sort_order>100</sort_order>
        </caioflavio>
    </tabs>
    <sections>
        <pdfcart>
            <label>PDFCart</label>
            <tab>caioflavio</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general>
                    <label>Geral</label>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <page_title>
                            <label>Titulo da página:</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </page_title>  
                        <logo_name>
                            <label>Nome da Logo:</label>
                            <frontend_type>text</frontend_type>
                            <comment>Exemplos: logo.jpg, loja.png, empresa.gif.</comment>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </logo_name> 
                        <document_name>
                            <label>Nome do documento:</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </document_name>                                              
                    </fields>
                </general>
                <email>
                    <label>Email</label>
                    <sort_order>60</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active>
                            <label>Envia cotação por e-mail?</label>
                            <frontend_type>select</frontend_type>
                            <comment>Ativa ou desativa link de envio de email.</comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </active>
                        <template>
                            <label>Template</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                        </template>
                    </fields>                    
                </email>             
            </groups>
        </pdfcart>
    </sections>
</config>