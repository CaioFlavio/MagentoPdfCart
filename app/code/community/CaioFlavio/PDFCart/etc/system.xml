<?xml version="1.0"?>
<config>
    <tabs>
        <caioflavio>
            <label>CaioFlavio Extensions</label>
            <sort_order>100</sort_order>
        </caioflavio>
    </tabs>
    <sections>
        <pdfcart>
            <label>PDFCart</label>
            <tab>caioflavio</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general>
                    <label>Geral</label>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <logo_name>
                            <label>Nome do arquivo:</label>
                            <frontend_type>text</frontend_type>
                            <comment>Exemplos: logo.jpg, loja.png, empresa.gif.</comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </logo_name>
                        <logo_width>
                            <label>Tamanho da logo:</label>
                            <frontend_type>text</frontend_type>
                            <comment>Tamanho do logo em px.</comment>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </logo_width>
                        <header_title>
                            <label>Titulo do Header</label>
                            <frontend_type>text</frontend_type>
                            <!-- <comment>Tamanho do logo em px.</comment> -->
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </header_title>                                                
                    </fields>
                </general>              
            </groups>
        </pdfcart>
    </sections>
</config>